@model dynamic

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="d-flex align-items-center justify-content-center vh-100">
    <div class="text-center row">
        <div class=" col-md-6">
            <img src="~/assets/img/notfound.png" alt="Not Found"
                 class="img-fluid">
        </div>
        <div class=" col-md-6 mt-5">
            <p class="fs-3"> <span class="text-danger">Opps!</span> Sayfa bulunamadı.</p>
            <p class="lead">
                Hata Kodu : @ViewBag.Code
            </p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Anasayfa'ya Git</a>
        </div>

    </div>
</div>