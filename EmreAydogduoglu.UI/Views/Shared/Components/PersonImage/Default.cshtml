@model PersonViewModel

<a class="navbar-brand js-scroll-trigger" href="#page-top">
    <span class="d-block d-lg-none">@Model.Person.FirstName @Model.Person.LastName</span>
    @if (@Model.Person.ImageName == null)
    {
        <span class="d-none d-lg-block"><img class="img-fluid img-profile rounded-circle mx-auto mb-2" src="~/assets/img/person/profile.jpg" width="500px" asp-append-version="true" alt=""/></span>
    }
    else
    {
        <span class="d-none d-lg-block"><img class="img-fluid img-profile rounded-circle mx-auto mb-2" src="~/assets/img/person/@Model.Person.ImageName" width="500px" asp-append-version="true" alt=""/></span>
    }
</a>

