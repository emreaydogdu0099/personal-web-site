@model EmreAydogduoglu.UI.Models.CategoryListViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-danger">Kategori Listesi</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-area="Admin" asp-controller="Category" asp-action="Add" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> &nbsp; Kategori Ekle
            </a>
        </div>
    </div>
</div>

<div class="container">
    <table class="table mt-5 table-striped">
        <thead class="table-dark">
        <tr>
            <th>Kategori Adı</th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var category in Model.Categories)
        {
            <tr>
                <td>@category.Name</td>
                <td><a class="btn btn-info btn-sm" asp-area="Admin" asp-controller="Category" asp-action="Update" asp-route-id="@category.Id"><i class="bi bi-pencil-square"></i> Düzenle</a></td>
                <td><a class="btn btn-danger btn-sm" asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id"><i class="bi bi-trash3"></i> Sil</a></td>
            </tr>
        }
        </tbody>
    </table>
</div>
