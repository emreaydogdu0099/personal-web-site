@model SkillViewModel

@{
    ViewData["Title"] = "Güncelle";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 bg-info mb-5 rounded-3">
    <h3 class="mb-3 text-sm-center text-danger font-monospace fw-bolder p-2">Beceriyi Düzenle</h3>
    <form class="row g-3" asp-area="Admin" asp-controller="Skill" asp-action="Update" method="post">
        <div class="col-md-12">
            <label asp-for="Skill.Name" class="form-label">Beceri Adı</label>
            <input asp-for="Skill.Name" type="text" class="form-control"/>
        </div>
        <div class="col-md-12">
            <label asp-for="Skill.Point" class="form-label">Beceri Puanı</label>
            <input asp-for="Skill.Point" type="number" class="form-control">
        </div>
        <input type="hidden" asp-for="Skill.Id"/>
        <button type="submit" class="btn btn-success col-md-1 mx-auto mb-3">Güncelle</button>
    </form>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}
