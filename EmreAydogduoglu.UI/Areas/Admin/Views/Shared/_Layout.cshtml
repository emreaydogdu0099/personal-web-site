<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Dashboard - Admin Paneli</title>
    <link href="~/css/admin_styles.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />
    <link href="~/lib/toastr.js/toastr.min.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Navbar Brand-->
        <a class="navbar-brand ps-3" asp-area="Admin" asp-controller="Home" asp-action="Index">Admin Paneli</a>
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
        <!-- Navbar Search-->
        <form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
            <div class="input-group">
                <input class="form-control" type="text" placeholder="Arayın..." aria-label="Search for..." aria-describedby="btnNavbarSearch" />
                <button class="btn btn-primary" id="btnNavbarSearch" type="button"><i class="fas fa-search"></i></button>
            </div>
        </form>
        <!-- Navbar-->
        <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Person" asp-action="Index">Ayarlar</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    <form asp-area="Identity" asp-page="/Account/Logout" method="post">
                    <li><button type="submit" class="dropdown-item">Çıkış Yap</button></li>
                    </form>

                </ul>
            </li>
        </ul>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Menü</div>
                        <a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Dashboard
                        </a>
                        <div class="sb-sidenav-menu-heading">İçerikler</div>
                        <a class="nav-link" asp-area="Admin" asp-controller="Category" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-th-list"></i></div>
                            Kategori
                        </a>
                        <a class="nav-link" asp-area="Admin" asp-controller="Article" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-file-alt"></i></div>
                            Makale
                        </a>

                        <div class="sb-sidenav-menu-heading">Kişisel Bilgiler</div>
                        <a class="nav-link" asp-area="Admin" asp-controller="Skill" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-battery-full"></i></div>
                            Beceriler
                        </a>
                        <a class="nav-link" asp-area="Admin" asp-controller="Education" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-school"></i></div>
                            Eğitim Bilgileri
                        </a>
                        <a class="nav-link" asp-area="Admin" asp-controller="Project" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-folder-open"></i></div>
                            Projeler
                        </a>
                        <a class="nav-link" asp-area="Admin" asp-controller="Social" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-address-book"></i></div>
                            İletişim
                        </a>
                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">Giriş Yapan Kullanıcı:</div>
                    Emre Aydoğduoğlu
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <partial name="_Notification" />
                @RenderBody()
            </main>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Tüm Hakları Saklıdır 2022</div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/admin_scripts.js"></script>
    <script src="~/lib/limonte-sweetalert2/sweetalert2.all.min.js"></script>
    <script src="~/lib/tinymce/tinymce.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
